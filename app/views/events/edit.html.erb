<h1>Edit Event: <%= @event.name %></h1>

<button><a href="/events">Events Dashboard</a></button>

<form action="/events/<%= @event.id %>" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<input type="hidden" name="_method" value="put">
	<label>Name</label>
	<input type="text" name="event[name]" value="<%= @event.name %>">
	<label>Location</label>
	<input type="text" name="event[location]" value="<%= @event.location %>">
	<label>State</label>
	<select name="event[state]">
		<option>WA</option>
		<option>OR</option>
		<option>CA</option>
		<option>NY</option>
		<option>MA</option>
	</select>
	<label>Date</label>
	<input type="date" name="event[date]"><br>
	<input type="submit" value="Update Event Information">
</form>

